{
  "name": "kissa-pagamentos",
  "version": "1.0.0",
  "description": "Backend do gateway de pagamentos com arquitetura de subadquirente (KissaPay)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run prebuild && tsc && node ./scripts/postbuild.js",
    "start": "node dist/server.js",
    "generate-token": "ts-node -r dotenv/config src/scripts/generate-token.ts",
    "pagarme-test": "ts-node -r dotenv/config src/scripts/pagarme-test.ts",
    "pagarme-v5-test": "ts-node -r dotenv/config src/scripts/pagarme-v5-test.ts",
    "lint": "tsc --noEmit",
    "swagger": "npx swagger-autogen swagger-output.json ./src/routes/*.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "ISC",
  "keywords": [
    "gateway",
    "pagamentos",
    "subadquirente",
    "api",
    "kissa",
    "kissapay",
    "nodejs",
    "typescript",
    "fintech"
  ],
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "pagarme": "^4.35.2",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "stripe": "^19.1.0",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.12.0",
    "@types/node-cache": "^4.1.3",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.3",
    "@types/stripe": "^8.0.416",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
